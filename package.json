{
	"name": "jscode",
	"version": "1.0.0",
	"description": "![JSCode](/doc/img/logo-horizontal.png)",
	"main": "index.js",
	"directories": {
		"doc": "doc"
	},
	"scripts": {
		"start": "npm run dev",
		"dev": "cross-env NODE_ENV=development nodemon",
		"build": "",
		"debug": "cross-env NODE_ENV=development DEBUG=express:* nodemon",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JSCode-es/server.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/JSCode-es/server/issues"
	},
	"homepage": "https://github.com/JSCode-es/server#readme",
	"eslintConfig": {
		"env": {
			"jest": true,
			"cypress/globals": true,
			"window": true
		},
		"plugin": [
			"cypress"
		]
	},
	"jest": {
		"testEnviroment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		]
	},
	"nodemonConfig": {
		"watch": [
			"src",
			"i18n",
			"frontend"
		],
		"ext": "pug,ts,css,json",
		"exec": "tsc && node ./build.js && node ./dist/app.js",
		"verbose": false,
		"legacyWatch": true
	},
	"devDependencies": {
		"@types/node": "^14.14.41",
		"cross-env": "^7.0.3"
	},
	"dependencies": {
		"@types/compression": "^1.7.0",
		"@types/connect-redis": "^0.0.16",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.11",
		"@types/express-session": "^1.17.3",
		"@types/fs-extra": "^9.0.11",
		"@types/pug": "^2.0.4",
		"@types/redis": "^2.8.28",
		"@types/spdy": "^3.4.4",
		"compression": "^1.7.4",
		"connect-redis": "^5.2.0",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-session": "^1.17.1",
		"fs-extra": "^9.1.0",
		"is-ip": "^3.1.0",
		"nodemon": "^2.0.7",
		"promise-mysql": "^5.0.3",
		"pug": "^3.0.2",
		"redis": "^3.1.2",
		"spdy": "^4.0.2"
	}
}
